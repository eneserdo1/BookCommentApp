<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@android:color/transparent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/today"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/suggestedRecycler_image"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:src="@drawable/harrybackground"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/suggestedRecycler_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.4"
                android:drawableStart="@drawable/ic_baseline_star_24"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/suggestedRecycler_bookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harry Potter Felsefe Taşı"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:layout_marginStart="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/suggestedRecycler_author_ımage"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/photo"
                    app:civ_border_width="3dp"
                    app:civ_border_color="#000000"/>
                <TextView
                    android:id="@+id/suggestedRecycler_author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muhammed Enes Erdoğan"
                    android:textSize="24sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>




        </LinearLayout>

    </FrameLayout>
</androidx.cardview.widget.CardView>